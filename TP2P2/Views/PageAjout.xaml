<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="TP2P2.Views.PageAjout"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TP2P2.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel Spacing="15" Width="400">

        <TextBox x:Name="BoxTitre" Header="Titre" PlaceholderText="Titre de la série" Text="{Binding Serie.Titre, Mode=TwoWay}"/>

        <TextBox x:Name="BoxResume" Header="Résumé"
                 Height="100" TextWrapping="Wrap" AcceptsReturn="True" 
                 PlaceholderText="Résumé de la série"
                 Text="{Binding Serie.Resume, Mode=TwoWay}"/>

        <Grid ColumnSpacing="15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <NumberBox Grid.Column="0" x:Name="BoxSaisons" Header="Nb Saisons" Value="{Binding Serie.Nbsaisons, Mode=TwoWay}" SpinButtonPlacementMode="Inline"/>
            <NumberBox Grid.Column="1" x:Name="BoxEpisodes" Header="Nb Épisodes" Value="{Binding Serie.Nbepisodes, Mode=TwoWay}" SpinButtonPlacementMode="Inline"/>
        </Grid>

        <NumberBox x:Name="BoxAnnee" Header="Année création" Value="{Binding Serie.Anneecreation, Mode=TwoWay}" SpinButtonPlacementMode="Inline"/>

        <TextBox x:Name="BoxNetwork" Header="Chaîne" PlaceholderText="Ex: HBO, Netflix..." Text="{Binding Serie.Network, Mode=TwoWay}"/>

        <Button Content="Ajouter" 
                Command="{Binding CommandeValide}"
                HorizontalAlignment="Stretch"
                Margin="0,20,0,0"
                Style="{StaticResource AccentButtonStyle}"/>

    </StackPanel>
</Page>